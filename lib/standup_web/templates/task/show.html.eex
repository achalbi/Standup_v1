<h2>Show Task</h2>

  <div class="row">
    <div class="input-field col m3 s12">
      <input id="task_number" type="text" class="validate" disabled value="<%= @task.task_number %>">
      <label class="active black-text "for="task_number">Task No.</label>
    </div>

    <div class="input-field col m9 s12">
      <input id="title" type="text" class="validate" disabled value="<%= @task.title %>">
      <label class="active black-text "for="title">Title</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input id="url" type="text" class="validate" disabled value="<%= @task.url %>">
      <label class="active black-text "for="url">URL</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col m6 s12">
      <input id="status" type="text" class="validate" disabled value="<%= @task.status %>">
      <label class="active black-text "for="status">Status</label>
    </div>

    <div class="input-field col m6 s12">
          <input id="on_date" type="text" class="validate" disabled value="<%= NaiveDateTime.to_date(@task.on_date) %>">
          <label class="active black-text "for="on_date">Date</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
        <textarea id="notes" class="materialize-textarea" disabled><%= @task.notes %></textarea>
        <label class="active black-text "for="notes">Notes</label>
    </div>
  </div>

<span><%= link "Edit", to: task_path(@conn, :edit, @task), class: "btn waves" %></span>
<span><%= link "Back", to: task_path(@conn, :index), class: "btn waves" %></span>
