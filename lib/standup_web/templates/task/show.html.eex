<h4>Show Task</h4>

  <div class="row">
    <div class="input-field col m3 s12">
      <input id="task_number" type="text" readonly value="<%= @task.task_number %>">
      <label class="active  "for="task_number">Task No.</label>
    </div>

    <div class="input-field col m9 s12">
      <input id="title" type="text" readonly value="<%= @task.title %>">
      <label class="active  "for="title">Title</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12 m6">
      <label class="active">Team</label>
      <input id="url" type="text" readonly value="<%= @task.team.name %>">
      <label class="active  "for="url">Team</label>
    </div>
    <div class="input-field col s12 m6 hide">
      <input id="url" type="text" readonly value="<%= @task.url %>">
      <label class="active  "for="url">URL</label>
    </div>
    <div class="input-field col s12 m6">
      <input id="url" type="text" readonly value="<%= @task.tense %>">
      <label class="active">Actual/Target</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col m6 s12">
      <input id="status" type="text" readonly value="<%= @task.status %>">
      <label class="active  "for="status">Status</label>
    </div>

    <div class="input-field col m6 s12">
          <input id="on_date" type="text"  readonly value='<%= @task.work_status.on_date |> Timex.Format.DateTime.Formatter.format!("%d %B, %Y", :strftime) %>'>
          <label class="active  "for="on_date">Date</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
        <textarea id="notes" class="materialize-textarea" readonly><%= @task.notes %></textarea>
        <label class="active" for="notes">Notes</label>
    </div>
  </div>

<span><%= link "Edit", to: task_path(@conn, :edit, @task), class: "btn waves" %></span>
<span><%= link "Back", to: work_status_path(@conn, :show, @task.work_status.id, work_status_type_id: @task.work_status.work_status_type_id), class: "btn waves" %></span>
